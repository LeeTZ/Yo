#This script add keyframes to video attributes 
a = Clip("Muppets.mp4")
c = a[1:320]
# a fade-in effect
c.alpha@1 = 1.0
c.alpha@96 = 0.1
#zoom in 
c.scale_x@130 = 1.0
c.scale_x@170 = 2.0
c.scale_x@220 = 1.0
c.scale_y@130 = 1.0
c.scale_y@170 = 2.0
c.scale_y@220 = 1.0
c.rotate@230 = 0.0
c.rotate@300 = 360.0
#add some live comment
comment = Clip("comment1.png")
comment.location_x @ 1 = 1.0
comment.location_x @ 150 = (0.0-1.0)
comment2 = Clip("comment2.png")
comment2.location_x @ 1 = 1.0
comment2.location_x @ 170 = (0.0-1.0)
#put them in correct layer
d = c ^ comment[1:151] @ 40
f = d ^ comment2[1:171] @ 30
f.log("03-keyframe.out")
f.save("bullet.webm")